<script>
  document.addEventListener("DOMContentLoaded", function() {
    const distributorsContinents = document.querySelectorAll('.distributors__filters-item')
    const distributorsList = document.querySelectorAll('.distributors__item')
    

    distributorsContinents.forEach(continent => {
      continent.addEventListener("click", function() {
        distributorsContinents.forEach(continent => {
         continent.classList.remove('active')
        })
        distributorsList.forEach(distributor => {
          distributor.classList.remove('active')
        })
        
        const _continent = continent.textContent;

        let selectedContinent = ""
        switch (_continent) {
          case "Africa":
              selectedContinent = document.querySelectorAll('.distributors__item--africa')
              selectedContinent.forEach(distributor => {
                distributor?.classList.add('active')
              })
              break;
          case "Asia":
              selectedContinent = document.querySelectorAll('.distributors__item--asia')
              selectedContinent.forEach(distributor => {
                distributor?.classList.add('active')
              })
              break;
          case "Europe":
              selectedContinent = document.querySelectorAll('.distributors__item--europe')
              selectedContinent.forEach(distributor => {
                distributor?.classList.add('active')
              })
              break;
          case "Middle East":
              selectedContinent = document.querySelectorAll('.distributors__item--middle-east')
              selectedContinent.forEach(distributor => {
                distributor?.classList.add('active')
              })
              break;
          case "North America":
              selectedContinent = document.querySelectorAll('.distributors__item--north-america')
              selectedContinent.forEach(distributor => {
                distributor?.classList.add('active')
              })
              break;
          case "Oceania":
              selectedContinent = document.querySelectorAll('.distributors__item--oceania')
              selectedContinent.forEach(distributor => {
                distributor?.classList.add('active')
              })
              break;
          case "South America":
              selectedContinent = document.querySelectorAll('.distributors__item--south-america')
              selectedContinent.forEach(distributor => {
                distributor?.classList.add('active')
              })
              break;
          default:
            selectedContinent = document.querySelectorAll('.distributors__item--africa')
            selectedContinent.forEach(distributor => {
                distributor?.classList.add('active')
              })
        }

        continent.classList.add('active')
      })

    });
  })
</script>
