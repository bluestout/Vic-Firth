{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.3 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .distributors__container {
    width: 100%;
    max-width: 1162px;
    margin: 0 auto;
  }
  .distributors__heading {
    text-align: center;
    text-transform: uppercase;
    font-size: 30px;
    letter-spacing: 1px;
    font-weight: 700;
  }
  .distributors__description {
    text-align: center;
    color: #5C5D60;
    font-size: 15px;
    line-height: 26px;
    width: 100%;
    max-width: 740px;
    margin: 0 auto;
  }
  .distributors__filters ul {
    display: flex;
    align-items: center;
    justify-content: space-between;
    list-style-type: none;
    margin-top: 80px;
    padding-left: 0 !important;
    gap: 10px;
  }
  .distributors__filters-item {
    border: 2px solid #000;
    padding: 10px 30px;
    border-radius: 25px;
    text-transform: uppercase;
    font-size: 16px;
    font-weight: 700;
    letter-spacing: 1px;
    cursor: pointer;
  }
  .distributors__filters-item.active {
    background: #CE0E2D;
    color: #fff;
    border: 2px solid #CE0E2D;
  }
  .distributors__items {
    margin-top: 57px;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    flex-wrap: wrap;
    gap: 10px;
  }
  .distributors__item {
    width: calc(25% - 10px);
    margin-bottom: 58px;
    display: none;
  }
  .distributors__item.active {
    display: block;
  }
  .distributors__item-heading {
    display: flex;
    align-items: flex-start;
    gap: 10px;
  }
  .distributors__item-heading svg {
    min-width: 20px;
  }
  .distributors__item-content h3 {
    margin: 5px 0 0;
    text-transform: uppercase;
    font-size: 16px;
  }
  .distributors__item-content p {
    margin: 7px 0;
  }

  @media screen and (max-width: 1100px) {
    .distributors__filters-item {
      padding: 10px 18px;
      font-size: 12px;
    }
  }

  @media screen and (max-width: 1023px) {
    .distributors__filters-item {
      font-size: 12px;
      padding: 4px 11px;
    }
    .distributors__filters ul {
      width: 738px;
    }
    .distributors__item {
      width: calc(50% - 10px);
    }
  }

  @media screen and (max-width: 767px) {
    .distributors__filters {
      overflow: scroll;
    }
    .distributors__filters ul {
      width: 712px;
      justify-content: flex-start;
      gap: 5px;
      margin-top: 40px;
    }
    .distributors__filters-item {
      font-size: 12px;
      padding: 4px 11px;
    }
    .distributors__items {
      flex-direction: column;
      margin-top: 20px;
    }
    .distributors__item {
      width: 100%;
      margin-bottom: 10px;
    }
    .distributors__heading {
      font-size: 18px;
    }
    .distributors__description {
      font-size: 14px;
    }
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

